{
  "cli": {
    "version": ">= 15.0.10",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "distribution": "internal",
      "developmentClient": true,
      "channel": "development",
      "env": {
        "APP_VARIANT": "development"
      },
      "hooks": {
        "prebuild": "yarn fetch-decks"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "channel": "preview",
      "env": {
        "APP_VARIANT": "preview"
      },
      "hooks": {
        "prebuild": "yarn fetch-decks"
      }
    },
    "production": {
      "autoIncrement": true,
      "channel": "production",
      "env": {
        "APP_VARIANT": "production"
      },
      "hooks": {
        "prebuild": "yarn fetch-decks"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "cajacko@icloud.com",
        "appleTeamId": "Y7FZ2VUQ32",
        "ascAppId": "6743489300"
      }
    }
  }
}
